{{> menu_cat}}
<section class="py-5">

    <h2 class="text-center text-4xl font-extrabold pt-10">{{title}}</h2>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14 px-5">
        {{#if properties}}
        {{#each properties}}
        <div class="bg-white shadow rounded-lg">
            <img class="object-cover h-72 w-full" src="{{this.image}}" alt="imagen propiedad {{this.title}}">
            <div class="p-5 space-y-3">

                <h3 class="text-2xl font-bold">{{this.title}}</h3>
                <p class="text-sm text-gray-600">Habitaciones: </p>
                <span class="text-gray-800 font-bold">{{this.rooms}}</span>
                <p class="text-sm text-gray-600">BanÌƒos: </p>
                <span class="text-gray-800 font-bold">{{this.wc}}</span>
                <p class="text-sm text-gray-600">Estacionamiento: </p>
                <span class="text-gray-800 font-bold">{{this.parking}}</span>
                <p class="text-sm text-gray-600">Precio: </p>
                <span class="text-gray-800 font-bold">{{this.precio}}</span>

                <a href="/property/{{this.id}}"
                    class="block w-full bg-cyan-800 text-white text-center rounded-lg px-12 py-3 mt-5 font-bold">Ver
                    Propiedad</a>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div></div>
        <p class="text-center">No hay resultados</p>
        {{/if}}

    </div>

</section>