<div class="py-5">
    <h1 class="text-4xl my-10 font-extrabold text-center">{{propiedad.title}}</h1>
    <div>
        <a href="#" class="font-bold text-gray-600 text-sm">Categoria: <span
                class="font-normal">{{propiedad.categoria}}</span></a> <a href="#" class="font-bold text-lg"></a>
    </div>

    <div class="mt-5 md:flex md:gap-4 md:items-start">
        <div class="md:w-2/3 bg-white shadow rounded-lg">
            <img src="{{propiedad.image}}" alt="imagen de la propiedad {{propiedad.title}}">
            <div class="px-5 py-10 space-y-5">
                <p>{{propiedad.description}}</p>
                <h2 class="text-2xl leading-6 font-bold text-gray-900">Informaci칩n Propiedad</h2>

                <div class="grid grid-cols-1 md:grid-cols-2">
                    <p class="text-gray-600 font-bold text-xs">Ba침os: <span
                            class="text-gray-800 text-lg block">{{propiedad.wc}}</span>
                    </p>
                    <p class="text-gray-600 font-bold text-xs">Habitaciones: <span
                            class="text-gray-800 text-lg block">{{propiedad.rooms}}</span></p>
                    <p class="text-gray-600 font-bold text-xs">Estacionamiento: <span
                            class="text-gray-800 text-lg block">{{propiedad.parking}}</span></p>
                    <p class="text-gray-600 font-bold text-xs">Precio: <span
                            class="text-gray-800 text-lg block">{{propiedad.precio}}</span></p>
                </div>
            </div>

        </div>

        <aside class="md:w-1/3 bg-white shadow rounded-lg">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Ubicaci칩n:</h3>
            <div id="map" class="h-96">
                <p id="lat" class="hidden">{{propiedad.lat}}</p>
                <p id="lng" class="hidden">{{propiedad.lng}}</p>
                <p id="street" class="hidden">{{propiedad.street}}</p>

            </div>
            <div class="p-5">
                <p class="text-gray-600 font-bold text-xs">Direcci칩n <span
                        class="text-gray-800 text-lg block">{{propiedad.street}}</span></p>
                {{#unless vendedor}}
                <h3 class="text-2xl text-center my-10 font-extrabold text-gray-900">Vendedor</h3>
                {{#if user}}


                enviale mensajes al vendedor

                {{else}}
                <div class="flex justify-center flex-col items-center gap-2">
                    <p>Si deseas contactar al vendedor debes crear una <a class="font-bold text-cyan-800"
                            href="/auth/register"> cuenta</a></p>
                </div>
                {{/if}}
                {{/unless}}





            </div>

        </aside>
    </div>
</div>
