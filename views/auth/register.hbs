<div class="py-2">
 
  <h2 class="text-center text-2xl font-extrabold">Crear cuenta</h2>
  {{#if errors}}
        <div class="max-w-md mx-auto my-4">
          {{#each errors}}
            <p
              class="bg-red-600 text-white uppercase font-bold text-xs p-2 rounded text-center mb-1"
            >{{msg}}</p>
          {{/each}}
        </div>
      {{/if}}
  <div class="mt-8 mx-auto max-w-md bg-white py-8 px-4 shadow">
    <form class="space-y-5" action="/auth/register" method="POST" novalidate>
      
      <div>

        <label
          class="block text-sm uppercase text-gray-500 mb-3 font-bold"
          for="name"
        >Tu nombre:</label>
        <input
          class="w-full py-2 px-3 border border-gray-300 rounded-md placeholder-gray-400"
          type="text"
          id="name"
          placeholder="Tu nombre"
          name="name"
          value="{{old.name}}"
        />
      </div>
      <div>
        <label
          class="block text-sm uppercase text-gray-500 mb-3 font-bold"
          for="email"
        >Tu Email:</label>
        <input
          class="w-full py-2 px-3 border border-gray-300 rounded-md placeholder-gray-400"
          type="email"
          id="email"
          placeholder="Tu email"
          name="email"
          value="{{old.email}}"
        />
      </div>
      <div>
        <label
          class="block text-sm uppercase text-gray-500 mb-3 font-bold"
          for="password"
        >Tu password:</label>
        <input
          class="w-full py-2 px-3 border border-gray-300 rounded-md placeholder-gray-400"
          type="password"
          id="password"
          placeholder="Tu password"
          name="password"
        />
      </div>
      <div>
        <label
          class="block text-sm uppercase text-gray-500 mb-3 font-bold"
          for="password2"
        >Repetir password:</label>
        <input
          class="w-full py-2 px-3 border border-gray-300 rounded-md placeholder-gray-400"
          type="password"
          id="password2"
          placeholder="Repetir password"
          name="password2"
        />
      </div>
      <div class="flex justify-between items-center text-xs text-gray-500">
        <a class="hover:text-red-900 hover:font-bold" href="/auth/login">¿Ya tienes
          una cuenta? Inicia sesión</a>
        <a class="hover:text-red-900 hover:font-bold" href="/auth/forget">Olvidé mi
          password</a>
      </div>
      <input
        class="w-full mt-4 py-3 px-3 border bg-cyan-800 text-white hover:bg-cyan-900 rounded-md cursor-pointer uppercase font-bold"
        type="submit"
        value="Registrarse"
      />

    </form>

  </div>

</div>